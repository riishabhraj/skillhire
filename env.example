# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# MongoDB
MONGODB_URI=your_mongodb_connection_string

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# GitHub Integration (Optional - for enhanced project evaluation)
# Get a personal access token from: https://github.com/settings/tokens
# Required scopes: repo (to access public repositories)
GITHUB_TOKEN=your_github_personal_access_token

# Hugging Face Integration (Optional - for AI-powered candidate evaluation)
# Get API key from: https://huggingface.co/settings/tokens
HF_TOKEN=your_hugging_face_api_token
# Recommended model: meta-llama/Meta-Llama-3-70B-Instruct or mistralai/Mistral-7B-Instruct-v0.2
HF_MODEL=meta-llama/Meta-Llama-3-70B-Instruct

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
# Bucket for company logos
AWS_S3_BUCKET_NAME=your-logo-bucket-name
# Bucket for candidate resumes
AWS_S3_RESUME_BUCKET_NAME=skillhire-resumes

# Lemon Squeezy Payment Processing
# Get your API key from: https://app.lemonsqueezy.com/settings/api
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
# Your store ID from the Lemon Squeezy dashboard
LEMONSQUEEZY_STORE_ID=your_store_id
# Webhook secret for verifying webhook signatures
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret
# Product variant IDs for Basic and Premium plans
LEMONSQUEEZY_BASIC_VARIANT_ID=your_basic_variant_id
LEMONSQUEEZY_PREMIUM_VARIANT_ID=your_premium_variant_id
# Public store ID (same as LEMONSQUEEZY_STORE_ID)
NEXT_PUBLIC_LEMONSQUEEZY_STORE_ID=your_store_id
